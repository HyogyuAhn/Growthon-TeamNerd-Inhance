<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Login Activity XML Styles -->
    <style name="loginLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#828282</item>
    </style>

    <style name="login_schoolName">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#828282</item>
    </style>

    <style name="login_error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FF1F1F</item>
    </style>

    <style name="findPW">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#878787</item>
    </style>

    <!-- Register Common XML Styles -->
    <style name="register_title">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="register_info">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Register : Terms Fragment XML Styles -->
    <style name="terms_checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/register_checkbox_selector</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="terms_boxtext">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#000000</item>
    </style>


    <!-- Register : Password Fragment XML Styles -->
    <style name="password_alert">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#C2C2C2</item>
    </style>



</resources>