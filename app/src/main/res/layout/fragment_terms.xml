<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/terms_check_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_check_all" />

    <CheckBox
        android:id="@+id/terms_check_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_check_term" />

    <CheckBox
        android:id="@+id/terms_check_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_check_privacy" />

    <CheckBox
        android:id="@+id/terms_check_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_check_push"/>

    <Button
        android:id="@+id/terms_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms_btn_next"
        android:enabled="false" />

</LinearLayout>
