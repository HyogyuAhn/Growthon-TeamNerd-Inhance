<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.NicknameActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
         android:background="#CDE6EA" />

    <ImageView
        android:id="@+id/nickname_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/back_arrow"
        android:contentDescription="@string/nick_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="47dp" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:text="@string/nick_title"
            android:textAppearance="@style/nick_title"
            android:layout_centerInParent="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="47dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/black_line" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="@string/nick_now"
            android:textAppearance="@style/nick_now"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:layout_width="372dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"
            android:background="@drawable/nick_field" >

            <TextView
                android:id="@+id/nick_txt_now"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="9dp"
                android:text="@string/nick_txt_now"
                android:textAppearance="@style/nick_txt_now" />

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>