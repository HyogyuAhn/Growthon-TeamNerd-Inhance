<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".account.LoginActivity">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp"
        android:src="@drawable/login_logo"
        android:contentDescription="@string/loginLogo"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="327dp"
            android:layout_height="306dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="327dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_field">

                <EditText
                    android:id="@+id/text_id"
                    android:layout_width="295dp"
                    android:layout_height="20dp"
                    android:autofillHints="학번 (8자리)"
                    android:hint="@string/loginID"
                    android:inputType="number"
                    android:textAppearance="@style/loginLabel"
                    android:lineSpacingExtra="3sp"
                    android:translationY="-1.33sp"
                    android:gravity="top"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="8"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="327dp"
                android:layout_height="40dp"
                android:layout_marginTop="56dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_field">

                <EditText
                    android:id="@+id/text_pw"
                    android:layout_width="295dp"
                    android:layout_height="20dp"
                    android:hint="@string/loginPW"
                    android:autofillHints="비밀번호"
                    android:inputType="textPassword"
                    android:textAppearance="@style/loginLabel"
                    android:lineSpacingExtra="3sp"
                    android:translationY="-1.33sp"
                    android:gravity="top"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/text_error"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="100dp"
                android:layout_marginStart="5dp"
                android:textAppearance="@style/login_error"
                android:lineSpacingExtra="2sp"
                android:gravity="center_vertical"
                />

            <RelativeLayout
                android:layout_width="327dp"
                android:layout_height="40dp"
                android:layout_marginTop="127dp" >

                <android.widget.Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_btn_login_back"
                    android:text="@string/login"
                    android:textColor="#ffffff" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="327dp"
                android:layout_height="40dp"
                android:layout_marginTop="178dp" >

                <android.widget.Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_btn_register_back"
                    android:text="@string/register"
                    android:textColor="#ffffff"
                    />

            </RelativeLayout>
            
            <TextView
                android:id="@+id/findPW"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="235dp"
                android:text="@string/findPW"
                android:textAppearance="@style/findPW"
                android:gravity="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="269dp"
                >

                <View
                    android:layout_width="159.5dp"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <View
                    android:layout_width="159.5dp"
                    android:layout_height="1dp"
                    android:background="#E6E6E6"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/schoolName"
                android:layout_width="327dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="@string/login_schoolName"
                android:textAppearance="@style/login_schoolName"
                android:lineSpacingExtra="3sp"
                android:translationY="-.174sp"
                android:gravity="center_horizontal|top"
                />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="37dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/login_logo"
            android:contentDescription="@string/loginLogo"
            />

    </RelativeLayout>


</RelativeLayout>